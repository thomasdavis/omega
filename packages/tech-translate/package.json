{
  "name": "@omega/tech-translate",
  "version": "0.1.0",
  "description": "Convert informal user requests into detailed, actionable technical specifications with LLM-powered translation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tech-translate": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "ai",
    "llm",
    "spec",
    "specification",
    "architecture",
    "devops",
    "database",
    "nlp",
    "pam",
    "technical-writing",
    "requirements",
    "documentation"
  ],
  "author": "Thomas Davis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasdavis/omega.git",
    "directory": "packages/tech-translate"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "openai": ">=4.0.0",
    "@anthropic-ai/sdk": ">=0.17.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
