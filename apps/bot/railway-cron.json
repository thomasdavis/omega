{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd ../.. && pnpm install && pnpm build --filter=bot"
  },
  "deploy": {
    "startCommand": "cd apps/bot && node dist/scripts/analyze-all-users.js",
    "restartPolicyType": "never",
    "cronSchedule": "0 0 * * *"
  }
}
