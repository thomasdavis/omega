# Discord Configuration
# Get these from: https://discord.com/developers/applications
# Bot tab -> Copy Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# OpenAI Configuration
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Configuration (Optional)
# Required for PR comic generation feature
# Get this from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Maps API Configuration (Optional)
# Required for location detection and map generation features
# Get this from: https://developers.google.com/maps/documentation/maps-static/get-api-key
# Enables: Static Maps API and Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Artifact Server Configuration
# Port for the artifact preview server (default: 3001)
ARTIFACT_SERVER_PORT=3001

# Public URL for artifact previews (set this in production)
# Example: https://your-domain.com or http://your-ip:3001
ARTIFACT_SERVER_URL=http://localhost:3001

# Turso Database Configuration (Optional)
# If not set, will use local SQLite file
# Get these from: https://turso.tech
# TURSO_DATABASE_URL=libsql://your-database.turso.io
# TURSO_AUTH_TOKEN=your_turso_auth_token

# MongoDB Configuration (Optional)
# Required for MongoDB tool access (14 tools for CRUD, collections, and aggregation)
# Railway automatically provides MONGO_URL via MongoDB plugin
# For local development:
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=omega_bot
# Railway production (auto-provided):
# MONGO_URL=mongodb://mongo:password@host:27017

# PostgreSQL Configuration (Optional)
# Required for PostgreSQL tool access (13 tools for relational database operations)
# Railway automatically provides DATABASE_URL via PostgreSQL plugin
# For local development, format: postgresql://user:password@localhost:5432/database
POSTGRES_URL=postgresql://localhost:5432/omega_bot
# Alternative: Railway sets DATABASE_URL automatically (used as fallback)
# DATABASE_URL=postgresql://postgres:password@host:port/database

# GitHub Configuration (Optional)
# Required for file upload to GitHub repository
# Get a personal access token from: https://github.com/settings/tokens
# Requires 'repo' scope for uploading files to the repository
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=thomasdavis/omega

# Pusher Configuration (Optional)
# Required for real-time collaborative document editing
# Get these from: https://pusher.com
# Sign up for a free account and create a new app
# Copy the credentials from your app dashboard
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=us2

# Val Town Configuration (Optional)
# Required for rapid prototyping and deployment without database migrations
# Get API key from: https://val.town/settings/api
VAL_TOWN_API_KEY=your_val_town_api_key_here

# Optional: Logging
# NODE_ENV=development
# LOG_LEVEL=debug
