{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd ../.. && pnpm install && pnpm build --filter=web"
  },
  "deploy": {
    "startCommand": "cd apps/web && pnpm start",
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 10
  }
}
